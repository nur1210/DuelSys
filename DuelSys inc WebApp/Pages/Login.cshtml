@page
@model DuelSys_inc_WebApp.Pages.LoginModel
@{
}
<body class="is-preload">
	<div id="page-wrapper">
		<section id="main" class="container medium">
			<header>
				<h2>Register</h2>
				<p>Please fill in your info.</p>
			</header>
			<div class="box">
				<form method="post">
					<div class="text-danger" asp-validation-summary="ModelOnly"></div>
					<div class="row gtr-50 gtr-uniform">
						<div class="col-12">
							<span class="text-danger" asp-validation-for="credential.Email"></span>
							<input asp-for="credential.Email" type="email" placeholder="Email"/>
						</div>
						<div class="col-12">
							<span class="text-danger" asp-validation-for="credential.Password"></span>
							<input asp-for="credential.Password" type="password" placeholder="Password" />
						</div>
						<div class="col-12">
							<ul class="actions special">
								<li><input type="submit" value="Login" /></li>
							</ul>
							<p align="center">Don't have an account? <a asp-area="" asp-page="/Register">Register</a>.</p>
						</div>
					</div>
				</form>
			</div>
		</section>
	</div>
</body>