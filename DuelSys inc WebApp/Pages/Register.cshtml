<body class="is-preload">
	<div id="page-wrapper">
		<section id="main" class="container medium">
			<header>
				<h2>Register</h2>
				<p>Please fill in your info.</p>
			</header>
			<div class="box">
				<form method="post">
					<div class="text-danger" asp-validation-summary=ModelOnly></div>
					<div class="row gtr-50 gtr-uniform">
						<div class="col-6 col-12-mobilep">
							<span class="text-danger" asp-validation-for="RegisterForm.FirstName"></span>
							<input asp-for="RegisterForm.FirstName" type="text" placeholder="First name" />
						</div>
						<div class="col-6 col-12-mobilep">
							<span class="text-danger" asp-validation-for="RegisterForm.LastName"></span>
							<input asp-for="RegisterForm.LastName" type="text" placeholder="Last name"/>
						</div>
						<div class="col-12">
							<span class="text-danger" asp-validation-for="RegisterForm.Email"></span>
							<input asp-for="RegisterForm.Email" type="email" placeholder="Email"/>
						</div>
						<div class="col-6 col-12-mobilep">
							<span class="text-danger" asp-validation-for="RegisterForm.Password"></span>
							<input asp-for="RegisterForm.Password" type="password" placeholder="Password" />
						</div>
						<div class="col-6 col-12-mobilep">
							<span class="text-danger" asp-validation-for="RegisterForm.RepeatPassword"></span>
							<input asp-for="RegisterForm.RepeatPassword" type="password" placeholder="Repeat password"/>
						</div>
						<div class="col-12">
							<ul class="actions special">
								<li><input type="submit" value="Register" /></li>
							</ul>
						</div>
					</div>
				</form>
			</div>
		</section>
	</div>
</body>