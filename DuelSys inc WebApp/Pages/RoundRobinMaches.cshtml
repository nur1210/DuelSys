@page
@model 			RoundRobinMatchesModel
@{
	var playerMatches = Model.MatchService.GetAllMatchesPerPlayer(1);
	var row = 0;
	var index = row;
}
<div class="container" id="page-wrapper">
	<table>
		<tr>
			<th>Player</th>
			<th>Result</th>
		</tr>
		@foreach (var pm in playerMatches)
		{
			<tr>
				<td>@pm.Key</td>
				@foreach (var m in pm.Value)
				{
					if (index == row)
					{
						index += 1;
						<td></td>
					}
					index += 1;
					<td>@m.Id</td>
				}
			</tr>
			row += 1;
			index = 0;
		}
	</table>
</div>
